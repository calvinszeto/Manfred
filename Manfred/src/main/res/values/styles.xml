<resources>

    <!-- Base application theme. -->
    <style name="ManfredTheme" parent="Theme.AppCompat">
        <!-- See http://developer.android.com/guide/topics/ui/themes.html for instructions on using themes -->
        <!-- List of attributes here: http://developer.android.com/reference/android/R.attr.html -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/background_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/Gray</item>
    </style>

    <!-- Theme for action buttons. -->
    <style name="ActionTheme" parent="Theme.AppCompat">
        <!-- List of attributes here: http://developer.android.com/reference/android/R.attr.html -->
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
