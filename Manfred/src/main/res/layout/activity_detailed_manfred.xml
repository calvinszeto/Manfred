<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailed_manfred_screen"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/detail_screen_header"
        android:text="@string/app_name"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />

    <fragment
        android:name="com.calvins.manfred.ManfredActivity$ManfredFragment"
        android:id="@+id/manfred"
        android:layout_below="@+id/detail_screen_header"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        tools:layout="@layout/fragment_manfred" />

    <TextView
        android:id="@+id/detail_weight"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/manfred"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/detail_vo2_max"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/detail_weight"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/detail_squat"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/detail_vo2_max"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/detail_body_fat"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/detail_squat"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

</RelativeLayout>